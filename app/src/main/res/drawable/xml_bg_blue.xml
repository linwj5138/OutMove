<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <padding
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="5dp"/>
            <corners android:radius="5dp" />
            <solid android:color="@color/gray" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <padding
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="5dp"/>
            <corners android:radius="5dp" />
            <solid android:color="@color/gray" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="5dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="5dp"/>
            <corners android:radius="5dp" />
            <solid android:color="#2885d7" />
            <stroke
                android:width="1dp"
                android:color="#2885d7" />
        </shape>
    </item>
</selector>