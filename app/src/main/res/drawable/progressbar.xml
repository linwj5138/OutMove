<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item android:id="@android:id/background">

    <shape >

        <corners android:radius="5dip"/>

        <gradient
            android:angle="0"
            android:centerColor="#ffffccff"
            android:centerY=".075"
            android:endColor="#ffffccff"
            android:startColor="#ffffccff"/>
    </shape>

</item>

<item android:id="@android:id/secondaryProgress">

    <clip>

        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="0"
                android:centerColor="#ff99ccff"
                android:centerY=".075"
                android:endColor="#ff6699cc"
                android:startColor="#ff6699ff"/>
        </shape>
    </clip>
</item>

<item android:id="@android:id/progress">

    <clip>

        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="0"
                android:startColor="#ff99ccff"
                android:centerColor="#ff6699cc"
                android:endColor="#ff6699ff"/>
        </shape>
    </clip>
</item>

</layer-list>
